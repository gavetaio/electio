{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": ".",
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
